{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--colors",
        "--no-timeouts",
        "-u", "tdd",
        "${workspaceFolder}/test"
      ],
      "preLaunchTask": "npm: build",
      "skipFiles": [
        "<node_internals>/**",
        //"${workspaceFolder}/node_modules/**",
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
